<!DOCTYPE html>
<html>
<head>
  <title>Krushi Kendra Center - Receipt</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    
    .receipt-header {
      text-align: center;
      margin-bottom: 20px;
    }
    
    .receipt-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    
    .receipt-details {
      margin-bottom: 20px;
    }
    
    .receipt-table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 10px;
    }
    
    .receipt-table th,
    .receipt-table td {
      padding: 8px;
      border: 1px solid #000;
    }
    
    .receipt-table th {
      background-color: #f2f2f2;
      text-align: left;
    }
    
    .receipt-total {
      text-align: right;
      margin-top: 20px;
      font-weight: bold;
    }
    
    .receipt-footer {
      margin-top: 50px;
      text-align: center;
    }
  </style>
  <script>
    
  
    fetch("/api")
      .then((res) => res.json())
      .then((data) => {

        const data = data;
      });
  
    
  </script>
</head>
<body>
  <div class="receipt-header">
    <h1 class="receipt-title">Krushi Kendra Center</h1>
    <p>Address, City, Country</p>
    <p>Phone: 123-456-7890 | Email: info@example.com</p>
  </div>
  
  <div class="receipt-details">
    <table class="receipt-table">
      <thead>
        <tr>
          <th>Product Name</th>
        
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% let totalPrice = 0; %>
        <% cart.forEach(function(item) { %>
            <tr>
              <td><%= item.productName %></td>
              <td><%= item.price %></td>
              
            </tr>
            <% totalPrice += parseInt(item.price); %>
            <% }); %>
      </tbody>

    </table>
  </div>
  
  <div class="receipt-total">
    <p>Total Quantity: <%= cart.length %> </p>
    <p>Total Amount: <%= totalPrice %></p>
  </div>
  
  <div class="receipt-footer">
    <p>Thank you for your visit!</p>
    <form  method="get|post" action="/cartsubmit">  
		<button type="submit">Submit</button>
	</form>
  </div>
</body>
</html>